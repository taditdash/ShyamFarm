@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div style="width: 30vw; margin-top: 10vh; margin-left: 36vw;">
    <div style="text-align:center;">
        <img src="~/Content/Image/logo.jpeg" alt="logo" style="height:300px;" />
    </div>
    <form>
        <div class="form-group">
            <label for="userLoginName">Login Name:</label>
            <input type="text" class="form-control" id="userLoginName" />
        </div>
        <div class="form-group">
            <label for="userPassword">Password:</label>
            <input type="password" class="form-control" id="userPassword" />
        </div>
        <div class="form-group">
            <a href="javascript:void()" class="float-right" data-toggle="modal" data-target="#CreateUser">Register</a>
        </div>
        <div class="form-group">
            <input type="button" class="form-control btn btn-primary" id="login" value="Login">
        </div>
    </form>
</div>

<div class="modal fade UserDetails" tabindex="-1" role="dialog" id="CreateUser" data-id="0" data-prop-name="UserId">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create User</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="userName">User Name:</label>
                        <input type="text" 
                               class="form-control" 
                               id="userName" 
                               data-prop-name="UserName" 
                               data-required 
                               data-required-message="UserName is required."/>
                    </div>
                    <div class="form-group">
                        <label for="loginName">Login Name:</label>
                        <input type="text" 
                               class="form-control" 
                               id="loginName" 
                               data-prop-name="LoginName"
                               data-required 
                               data-required-message="LoginName is required."/>
                    </div>
                    <div class="form-group">
                        <label for="uniqueKey">Unique Key:</label>
                        <input type="text" 
                               class="form-control" 
                               id="uniqueKey" 
                               data-prop-name="UniqueKey"
                               data-required 
                               data-required-message="UniqueKey is required."/>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" 
                               class="form-control" 
                               id="password" 
                               data-prop-name="Key" 
                               data-match
                               data-match-id="#reenterPassword"
                               data-match-message="Password doesnot match, Please re-enter Password."/>
                    </div>
                    <div class="form-group">
                        <label for="reenterPassword">Reneter Password:</label>
                        <input type="password" class="form-control" id="reenterPassword" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary saveUserDetails" data-dismiss="modal">Save</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<script src="/Content/Theme/assets/js/core/jquery.min.js"></script>
<script src="/Content/Theme/assets/js/core/popper.min.js"></script>
<script src="/Content/Theme/assets/js/core/bootstrap-material-design.min.js"></script>

<script src="/Content/Script/User.js"></script>